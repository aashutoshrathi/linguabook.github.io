{
  "name": "LingvoBook",
  "author": "Sergey Todyshev",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Chrome extension for https://linguabook.github.io",
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["linguabook-content.js"]
    }
  ],
  "permissions": [
    "https://tsvbits.com/*",
    "https://*.google.com/*",
    "https://*.microsoft.com/*",
    "https://linkedin.com/*",
    "https://*.slack.com/*",
    "https://*.twitter.com/*"
  ]
}
