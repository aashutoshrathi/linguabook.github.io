{
  "name": "LingvoBook",
  "author": "Sergey Todyshev",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Chrome extension for https://linguabook.github.io",
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": ["linguabook-popup.js"]
    }
  ],
  "permissions": [
    "*://*/*",
    "storage"
  ]
}
